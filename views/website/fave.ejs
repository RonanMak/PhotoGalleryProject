<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/fave.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <h1 class="centered">My favorite stock images </h1>
            <% if (images.length > 0) { %>
                <ul class="fave__item-list">
                    <% images.forEach(p => { %>
                        <li class="fave__item">
                            <h1><%= p.title %></h1>
                            
                            <form action="/fave-delete-image" method="POST">
                                <input type="hidden" value="<%= p.id %>" name="imageId">
                                <button class="btn danger" type="submit">Delete</button>
                            </form>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <h1>No Images in Fave</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>